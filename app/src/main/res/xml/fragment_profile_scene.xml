<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/map_square">
            <PropertySet app:motionProgress="0" />
        </Constraint>

        <Constraint android:id="@+id/scanner_square">
            <PropertySet app:motionProgress="0" />
        </Constraint>

        <Constraint android:id="@+id/qr_square">
            <PropertySet app:motionProgress="0" />
        </Constraint>

        <Constraint android:id="@+id/event_square">
            <PropertySet app:motionProgress="0" />
        </Constraint>

        <Constraint android:id="@+id/profile_square">
            <PropertySet app:motionProgress="0" />
        </Constraint>

        <Constraint android:id="@+id/info_square">
            <PropertySet app:motionProgress="0" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/map_square_end">
        <Constraint android:id="@+id/map_square">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform android:elevation="10dp" />
            <PropertySet app:motionProgress="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/scanner_square_end">
        <Constraint android:id="@+id/scanner_square">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform android:elevation="10dp" />
            <PropertySet app:motionProgress="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/qr_square_end">
        <Constraint android:id="@+id/qr_square">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform android:elevation="10dp" />
            <PropertySet app:motionProgress="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/event_square_end">
        <Constraint android:id="@+id/event_square">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform android:elevation="10dp" />
            <PropertySet app:motionProgress="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/profile_square_end">
        <Constraint android:id="@+id/profile_square">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform android:elevation="10dp" />
            <PropertySet app:motionProgress="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/info_square_end">
        <Constraint android:id="@+id/info_square">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Transform android:elevation="10dp" />
            <PropertySet app:motionProgress="1" />
        </Constraint>
    </ConstraintSet>


    <Transition
        app:constraintSetEnd="@id/map_square_end"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnClick app:targetId="@id/map_square" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/scanner_square_end"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnClick app:targetId="@id/scanner_square" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/qr_square_end"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnClick app:targetId="@id/qr_square" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/event_square_end"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnClick app:targetId="@+id/event_square" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/profile_square_end"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnClick app:targetId="@id/profile_square" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/info_square_end"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnClick app:targetId="@id/info_square" />
    </Transition>

</MotionScene>
